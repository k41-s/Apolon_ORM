@model Apolon.Core.Models.Checkup
@using Apolon.Core.Models.Enums

<h1>Record New Checkup</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient</label>
                <select asp-for="PatientId" class="form-control" asp-items="@(new SelectList(ViewBag.Patients, "Id", "FullName"))">
                    <option value="">-- Select Patient --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckupType" class="control-label">Type</label>
                <select asp-for="CheckupType" class="form-control" asp-items="Html.GetEnumSelectList<CheckupType>()">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="CheckupType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Finding" class="control-label"></label>
                <textarea asp-for="Finding" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Finding" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Record Checkup" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Index">Back to Checkups List</a>
</div>